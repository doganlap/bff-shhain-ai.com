# GRC Ecosystem Production Environment Variables
# Multi-Tenant, Multi-Role, Multi-Service Ecosystem

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=grc_ecosystem
DB_USER=grc_user
DB_PASSWORD=CHANGE_IN_PRODUCTION_SECURE_PASSWORD_2024
DB_POOL_MIN=5
DB_POOL_MAX=20

# ==========================================
# JWT & AUTHENTICATION
# ==========================================
JWT_SECRET=CHANGE_IN_PRODUCTION_JWT_SECRET_KEY_ECOSYSTEM_2024_SECURE
JWT_REFRESH_SECRET=CHANGE_IN_PRODUCTION_JWT_REFRESH_SECRET_KEY_2024
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# ==========================================
# SERVICE CONFIGURATION
# ==========================================
NODE_ENV=production
SERVICE_TOKEN=CHANGE_IN_PRODUCTION_SERVICE_TOKEN_2024_SECURE
ENCRYPTION_KEY=CHANGE_IN_PRODUCTION_ENCRYPTION_KEY_32_CHARS

# ==========================================
# SERVICE URLs (for BFF)
# ==========================================
GRC_API_URL=http://grc-api:3000
AUTH_SERVICE_URL=http://auth-service:3001
DOCUMENT_SERVICE_URL=http://document-service:3002
PARTNER_SERVICE_URL=http://partner-service:3003
NOTIFICATION_SERVICE_URL=http://notification-service:3004

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://yourdomain.com/api

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_PASSWORD=CHANGE_IN_PRODUCTION_REDIS_PASSWORD_2024

# ==========================================
# SMTP CONFIGURATION (Notification Service)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-production-email@gmail.com
SMTP_PASSWORD=your-production-app-password
SMTP_FROM=noreply@yourdomain.com

# ==========================================
# MICROSOFT SSO (Optional)
# ==========================================
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# ==========================================
# RABBITMQ (Optional - Event Bus)
# ==========================================
RABBITMQ_USER=admin
RABBITMQ_PASS=CHANGE_IN_PRODUCTION_RABBITMQ_PASSWORD

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# FILE UPLOAD
# ==========================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# ==========================================
# SECURITY SETTINGS
# ==========================================
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=
