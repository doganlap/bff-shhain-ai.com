{
  "version": 2,
  "builds": [
    {
      "src": "apps/bff/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/web/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/bff/index.js"
    },
    {
      "src": "/bff/(.*)",
      "dest": "/apps/bff/index.js"
    },
    {
      "src": "/health",
      "dest": "/apps/bff/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
