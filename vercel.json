{
  "version": 2,
  "installCommand": "pnpm install --no-frozen-lockfile",
  "framework": "vite",
  "buildCommand": "cd apps/web && pnpm run build",
  "outputDirectory": "apps/web/dist",
  "functions": {
    "apps/bff/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/bff/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/web/dist/index.html"
    }
  ]
}
