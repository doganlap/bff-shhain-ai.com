# GRC Ecosystem Production Environment Variables
# ‚ö†Ô∏è SECURITY CRITICAL: Replace ALL placeholder values before deployment
# üîê Generate secure passwords: https://passwordsgenerator.net/ (32+ characters)

# ==========================================
# üè¢ DEPLOYMENT CONFIGURATION
# ==========================================
DOMAIN_NAME=your-domain.com
SUBDOMAIN=grc
FULL_DOMAIN=grc.your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# ==========================================
# üóÑÔ∏è DATABASE CONFIGURATION (CRITICAL)
# ==========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=grc_ecosystem_prod
DB_USER=grc_prod_user
# üîê CHANGE THIS: Generate 32+ character password
DB_PASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD_32_CHARS_MIN
DB_POOL_MIN=5
DB_POOL_MAX=20

# ==========================================
# üîë JWT & AUTHENTICATION (CRITICAL)
# ==========================================
# üîê CHANGE THIS: Generate 64+ character JWT secret
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_64_CHARS_MIN_RANDOM_STRING
# üîê CHANGE THIS: Generate different 64+ character refresh secret
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_JWT_REFRESH_SECRET_64_CHARS
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# ==========================================
# üîê ENCRYPTION & SERVICE TOKENS (CRITICAL)
# ==========================================
NODE_ENV=production
# üîê CHANGE THIS: Generate 64+ character service token
SERVICE_TOKEN=REPLACE_WITH_SECURE_SERVICE_TOKEN_64_CHARS_MIN
# üîê CHANGE THIS: Must be exactly 32 characters for AES-256
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_ENCRYPTION_KEY

# ==========================================
# üåê SERVICE URLs (UPDATE DOMAINS)
# ==========================================
GRC_API_URL=http://grc-api:3000
AUTH_SERVICE_URL=http://auth-service:3001
DOCUMENT_SERVICE_URL=http://document-service:3002
PARTNER_SERVICE_URL=http://partner-service:3003
NOTIFICATION_SERVICE_URL=http://notification-service:3004

# ==========================================
# üåç FRONTEND CONFIGURATION (UPDATE DOMAIN)
# ==========================================
FRONTEND_URL=https://grc.your-domain.com
VITE_API_URL=https://grc.your-domain.com/api

# ==========================================
# üî¥ REDIS CONFIGURATION (CRITICAL)
# ==========================================
# üîê CHANGE THIS: Generate 32+ character Redis password
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD_32_CHARS

# ==========================================
# üìß SMTP CONFIGURATION (UPDATE)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# üîê CHANGE THIS: Use your production email
SMTP_USER=noreply@your-domain.com
# üîê CHANGE THIS: Use app-specific password
SMTP_PASSWORD=REPLACE_WITH_SMTP_APP_PASSWORD
SMTP_FROM=noreply@your-domain.com

# ==========================================
# üîµ MICROSOFT SSO (OPTIONAL)
# ==========================================
MICROSOFT_CLIENT_ID=your-azure-client-id
MICROSOFT_CLIENT_SECRET=your-azure-client-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# ==========================================
# üê∞ RABBITMQ (OPTIONAL)
# ==========================================
RABBITMQ_USER=grc_rabbitmq_user
# üîê CHANGE THIS: Generate secure RabbitMQ password
RABBITMQ_PASS=REPLACE_WITH_SECURE_RABBITMQ_PASSWORD

# ==========================================
# üõ°Ô∏è SECURITY SETTINGS
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=3600000

# ==========================================
# üìÅ FILE UPLOAD SECURITY
# ==========================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# ==========================================
# üìä MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
# üîê OPTIONAL: Add Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# üîí SSL/TLS CONFIGURATION
# ==========================================
SSL_CERT_PATH=/etc/letsencrypt/live/grc.your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/grc.your-domain.com/privkey.pem
FORCE_HTTPS=true

# ==========================================
# üõ°Ô∏è ADDITIONAL SECURITY HEADERS
# ==========================================
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
