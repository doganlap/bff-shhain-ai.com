# ================================
# Frontend Web Application Environment Variables Template
# ================================
# IMPORTANT: Copy this file to .env and fill in the actual values
# Never commit .env files with real credentials to Git!

# ================================
# API Configuration
# ================================
VITE_API_BASE_URL=http://localhost:8001
VITE_API_URL=http://localhost:8001/api

# ================================
# WebSocket Configuration
# ================================
VITE_WS_URL=http://localhost:3008

# ================================
# Application Configuration
# ================================
VITE_APP_NAME=Shahin AI - KSA GRC Platform
VITE_APP_VERSION=1.0.0
VITE_APP_LOCALE=ar

# ================================
# Environment
# ================================
NODE_ENV=development

# ================================
# Feature Flags (Optional)
# ================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false
VITE_ENABLE_DEBUG=true

# ================================
# External Services (Optional)
# ================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ================================
# Authentication (if applicable)
# ================================
VITE_AUTH_DOMAIN=your-auth-domain.com
VITE_AUTH_CLIENT_ID=your-client-id

# ================================
# Upload Limits
# ================================
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg
