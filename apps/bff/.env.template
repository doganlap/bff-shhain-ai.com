# ================================
# BFF (Backend for Frontend) Environment Variables Template
# ================================
# IMPORTANT: Copy this file to .env and fill in the actual values
# Never commit .env files with real credentials to Git!

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grc_ecosystem
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=8001

# ================================
# JWT & Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# ================================
# Service URLs
# ================================
GRC_API_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
DOCUMENT_SERVICE_URL=http://localhost:3002
PARTNER_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
AI_SCHEDULER_SERVICE_URL=http://localhost:3005
RAG_SERVICE_URL=http://localhost:3006
REGULATORY_SERVICE_URL=http://localhost:3008

# ================================
# Frontend URL
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# Security & Rate Limiting
# ================================
SERVICE_TOKEN=your-service-to-service-token
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# SMTP Configuration (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@grc-system.com

# ================================
# Sentry (Optional - for error tracking)
# ================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# Development Options
# ================================
BYPASS_AUTH=false
DEBUG=false
