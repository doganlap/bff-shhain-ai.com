{
  "name": "@grc/bff-tests",
  "version": "1.0.0",
  "description": "BFF API and Service Tests",
  "scripts": {
    "test": "jest",
    "test:services": "jest test/services.test.js",
    "test:api": "jest test/api.integration.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/services/**/*.js",
      "routes/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testTimeout": 30000
  }
}
