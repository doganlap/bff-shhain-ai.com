# ==========================================
# BFF (Backend for Frontend) Configuration
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=3005

# CRITICAL: Set a strong JWT secret for production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here-minimum-32-characters

# CRITICAL: Set a strong service token for internal service communication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SERVICE_TOKEN=your-secure-service-token-here-minimum-32-characters

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Service URLs (Internal Microservices)
GRC_API_URL=http://grc-api:3000
AUTH_SERVICE_URL=http://auth-service:3001
DOCUMENT_SERVICE_URL=http://document-service:3002
PARTNER_SERVICE_URL=http://partner-service:3003
NOTIFICATION_SERVICE_URL=http://notification-service:3004
AI_SCHEDULER_SERVICE_URL=http://ai-scheduler-service:3005
RAG_SERVICE_URL=http://rag-service:3006
REGULATORY_SERVICE_URL=http://regulatory-intelligence-ksa:3008

# Security Settings
BYPASS_AUTH=false  # NEVER set to true in production
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Rate Limiting (Auth endpoints)
AUTH_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# HSTS Settings (for production HTTPS)
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Redis Configuration (for caching, rate limiting, token blacklist)
# Optional: If not set, will use in-memory fallback
REDIS_URL=redis://localhost:6379

# ==========================================
# Microsoft Authentication (Azure AD)
# ==========================================

# Microsoft Azure AD / Entra ID Configuration
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=common  # Use 'common' for multi-tenant, or your specific tenant ID
MICROSOFT_REDIRECT_URI=http://localhost:3005/api/auth/microsoft/callback
MICROSOFT_AUTHORITY=https://login.microsoftonline.com

# ==========================================
# Stripe Payment Integration
# ==========================================

# Stripe API Keys (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==========================================
# Zakat.ie Integration
# ==========================================

# Zakat.ie API Configuration (Islamic charity/Zakat platform)
ZAKAT_API_KEY=your-zakat-api-key
ZAKAT_API_URL=https://api.zakat.ie/v1
ZAKAT_ORGANIZATION_ID=your-organization-id
ZAKAT_WEBHOOK_SECRET=your-webhook-secret

# ==========================================
# AI & Machine Learning Services
# ==========================================

# OpenAI Configuration (for RAG embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id
OPENAI_MODEL=text-embedding-ada-002

# Azure OpenAI (Alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-01

# ==========================================
# Email & Notification Services
# ==========================================

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=GRC Platform

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# File Storage Configuration
# ==========================================

# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,txt,csv

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=grc-documents
AWS_S3_UPLOAD_PATH=uploads/

# Azure Blob Storage (Alternative)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER=grc-documents

# ==========================================
# Scheduler Configuration
# ==========================================

# Job Scheduler Settings
SCHEDULER_ENABLED=true
SCHEDULER_MAX_CONCURRENT_JOBS=5
SCHEDULER_JOB_TIMEOUT=3600000  # 1 hour in milliseconds
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_RETRY_DELAY=60000  # 1 minute in milliseconds
